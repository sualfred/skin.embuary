<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- mediasource -->
	<defaultcontrol always="true">100</defaultcontrol>
	<controls>
		<!-- Background -->
		<include>Background</include>
		<!-- Thumb image -->
		<control type="group">
			<include>Window_OpenClose</include>
			<include>FullscreenDimensions</include>
			<control type="group">
				<top>128</top>
				<width>1920</width>
				<!-- Thumb -->
				<include content="MetaBigThumb">
					<param name="progress" value="false"/>
				</include>
				<!-- meta -->
				<control type="grouplist">
					<left>684</left>
					<orientation>vertical</orientation>
					<height>920</height>
					<width>1166</width>
					<align>top</align>
					<itemgap>0</itemgap>
					<control type="label">
						<height>60</height>
						<label>$INFO[ListItem.Title]</label>
						<font>Reg37</font>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
					<control type="label">
						<height>60</height>
						<label>$VAR[PVREpisodeName]</label>
						<font>Reg37</font>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
					<!-- meta -->
					<include>MetaPVRInfos</include>
					<!-- flags -->
					<include content="MetaFlags">
						<param name="type" value="PVRFlags"/>
					</include>
					<!-- buttons -->
					<control type="grouplist" id="100">
						<height>75</height>
						<orientation>horizontal</orientation>
						<itemgap>5</itemgap>
						<onleft>9999</onleft>
						<onright>noop</onright>
						<control type="button" id="101">
							<include>LightGreyButton</include>
							<label>$LOCALIZE[15067]</label>
							<onup>SetFocus(6666)</onup>
							<onclick>close</onclick>
						</control>
						<control type="button" id="5">
							<include>LightGreyButton</include>
							<label>$VAR[VideoInfoButton8]</label>
							<onup>SetFocus(6666)</onup>
						</control>
						<control type="button" id="6">
							<include>LightGreyButton</include>
							<onup>SetFocus(6666)</onup>
							<visible>!String.StartsWith(ListItem.Path,pvr://recordings)</visible>
						</control>
						<control type="button" id="9">
							<include>LightGreyButton</include>
							<label>19061</label>
							<onup>SetFocus(6666)</onup>
						</control>
						<control type="button" id="4">
							<include>LightGreyButton</include>
							<label>$LOCALIZE[31021]</label>
							<onup>SetFocus(6666)</onup>
						</control>
						<control type="button" id="102">
							<visible>!String.IsEmpty(ListItem.Plot)</visible>
							<include>LightGreyButton</include>
							<width>70</width>
							<height>50</height>
							<font>material24</font>
							<label>îƒ‰</label>
							<onclick>RunScript(script.skin.helper.service,action=textviewer,info=textviewer,header='$ESCVAR[TinyInfoDialogHeadline]',message='$ESCVAR[TinyInfoDialogPlot]')</onclick>
							<onup>SetFocus(6666)</onup>
						</control>
					</control>
					<control type="label">
						<height>40</height>
						<label>$INFO[ListItem.Genre,$LOCALIZE[515]: ,   ]$INFO[ListItem.Director,$LOCALIZE[20339]: ]</label>
						<font>reg22</font>
						<textcolor>emby</textcolor>
						<shadowcolor>text_shadow</shadowcolor>
					</control>
					<control type="textbox">
						<height>565</height>
						<align>justify</align>
						<aligny>top</aligny>
						<label>$INFO[ListItem.Plot]</label>
						<font>Light24</font>
						<shadowcolor>text_shadow</shadowcolor>
						<autoscroll>false</autoscroll>
					</control>
				</control>
			</control>
		</control>
		<!-- header bar -->
		<include content="HeaderBar">		
			<param name="id">100</param>
			<param name="enabled">false</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">100</param>
		</include>
	</controls>
</window>