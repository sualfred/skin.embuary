<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- mediasource -->
	<defaultcontrol always="true">100</defaultcontrol>
	<include>PropertyIncludes</include>
	<onload>Dialog.Close(pvrosdchannels)</onload>
	<controls>
		<!-- Background -->
		<include>Background</include>
		<!-- Thumb image -->
		<control type="group">
			<include>Window_OpenClose</include>
			<include>FullscreenDimensions</include>
			<control type="group">
				<top>90</top>
				<height>950</height>
				<!-- Thumb -->
				<include content="MetaBigThumb">
					<param name="progress" value="false"/>
				</include>
				<!-- meta -->
				<control type="grouplist">
					<left>684</left>
					<orientation>vertical</orientation>
					<width>1166</width>
					<align>top</align>
					<itemgap>0</itemgap>
					<control type="label">
						<height>55</height>
						<label>$INFO[ListItem.Title]</label>
						<font>Reg37</font>
						<aligny>top</aligny>
					</control>
					<control type="label">
						<height>55</height>
						<label>$VAR[ListItemEpisodeName]</label>
						<font>Reg37</font>
						<aligny>top</aligny>
					</control>
					<!-- meta -->
					<include>MetaPVRInfos</include>
					<!-- flags -->
					<include content="MetaFlags">
						<param name="type" value="PVRFlags"/>
					</include>
					<!-- buttons -->
					<control type="grouplist" id="100">
						<height>70</height>
						<orientation>horizontal</orientation>
						<itemgap>5</itemgap>
						<onleft>900</onleft>
						<onright>noop</onright>
						<control type="button" id="101">
							<visible>!Control.IsVisible(5) + !Control.IsVisible(8)</visible>
							<include>LightGreyButton</include>
							<label>$LOCALIZE[15067]</label>
							<onclick>close</onclick>
						</control>
						<control type="button" id="5">
							<include>LightGreyButton</include>
							<label>$VAR[VideoInfoButton8]</label>
							<visible>Window.IsVisible(PVRGuideInfo)</visible>
						</control>
						<control type="button" id="8">
							<include>LightGreyButton</include>
							<label>$VAR[PVRInfoButton8]</label>
							<visible>Window.IsVisible(PVRRecordingInfo) | Window.IsVisible(PVRGuideInfo)</visible>
						</control>
						<control type="button" id="6">
							<include>LightGreyButton</include>
							<visible>!String.StartsWith(ListItem.Path,pvr://recordings)</visible>
						</control>
						<control type="button" id="9">
							<include>LightGreyButton</include>
							<label>19061</label>
						</control>
						<control type="button" id="4">
							<include>LightGreyButton</include>
							<label>$LOCALIZE[31021]</label>
						</control>
						<control type="button" id="102">
							<visible>!String.IsEmpty(ListItem.Plot)</visible>
							<include>LightGreyButton</include>
							<width>70</width>
							<height>50</height>
							<font>material24</font>
							<label>î˜–</label>
							<onclick>RunScript(script.embuary.helper,action=textviewer,info=textviewer,header='$ESCVAR[TinyInfoDialogHeadline]',message='$ESCVAR[TinyInfoDialogPlot]')</onclick>
						</control>
					</control>
					<!-- genre -->
					<include>MetaGenre</include>
					<!-- plot -->
					<control type="textbox">
						<height>auto</height>
						<align>justify</align>
						<aligny>top</aligny>
						<label>$INFO[ListItem.Plot]</label>
						<font>Light24</font>
						<autoscroll>false</autoscroll>
					</control>
				</control>
			</control>
		</control>
		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">100</param>
			<param name="auto_hide">false</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">100</param>
		</include>
	</controls>
</window>