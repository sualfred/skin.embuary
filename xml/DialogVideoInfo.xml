<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">100</defaultcontrol>
	<onload condition="String.IsEqual(ListItem.DBType,season) + String.StartsWith(ListItem.Path,plugin://plugin.video.embycon) + String.IsEqual(ListItem.Label,All)">close</onload>
	<onload condition="String.IsEqual(ListItem.DBType,set) + String.StartsWith(ListItem.Path,plugin://plugin.video.embycon)">close</onload>
	<onload condition="String.IsEqual(ListItem.DBType,artist) + String.StartsWith(ListItem.Path,plugin://plugin.video.embycon)">close</onload>
	<include>UnloadSetProperties</include>
	<onunload condition="!String.IsEmpty(Window(home).Property(InfoDialogCloseFocus))">SetFocus(7070)</onunload>
	<include>PropertyIncludes</include>
	<controls>
		<!-- Hidden -->
		<control type="list" id="2000">
			<include>HiddenObject</include>
			<content limit="1">$VAR[View_Cast_Content]</content>
		</control>
		<control type="list" id="50">
			<include>HiddenObject</include>
		</control>
		<!-- Content -->
		<include condition="String.IsEqual(ListItem.DBType,movie) + [!String.StartsWith(ListItem.Path,plugin://) | String.StartsWith(ListItem.Path,plugin://plugin.video.emby)]">MovieInfoLayout</include>
		<include condition="String.IsEqual(ListItem.DBType,tvshow) + [!String.StartsWith(ListItem.Path,plugin://) | String.StartsWith(ListItem.Path,plugin://plugin.video.emby)]">TVShowInfoLayout</include>
		<include condition="String.IsEqual(ListItem.DBType,episode) + [!String.StartsWith(ListItem.Path,plugin://) | String.StartsWith(ListItem.Path,plugin://plugin.video.emby)]">EpisodeInfoLayout</include>
		<include condition="[!String.IsEqual(ListItem.DBType,movie) + !String.IsEqual(ListItem.DBType,tvshow) + !String.IsEqual(ListItem.DBType,episode) + [String.IsEqual(ListItem.DBType,season) + !String.IsEmpty(ListItem.Plot)]] | [String.StartsWith(ListItem.Path,plugin://) + !String.StartsWith(ListItem.Path,plugin://plugin.video.emby)]">TinyInfoLayout</include>
		<!-- Menu control -->
		<control type="group">
			<include>FullscreenDimensions</include>
			<include content="DiffuseMask">
				<param name="visible">ControlGroup(4000).HasFocus + !Window.IsVisible(selectdialog) + !Window.IsVisible(filebrowser) + !Window.IsVisible(DialogConfirm.xml)</param>
			</include>
			<control type="group">
				<visible>ControlGroup(4000).HasFocus + !Window.IsVisible(selectdialog) + !Window.IsVisible(filebrowser) + !Window.IsVisible(DialogConfirm.xml)</visible>
				<include>Visible_PopupOpenClose</include>
				<centerleft>50%</centerleft>
				<width>500</width>
				<centertop>50%</centertop>
				<height>982</height>
				<control type="grouplist" id="4000">
					<orientation>vertical</orientation>
					<height>auto</height>
					<align>center</align>
					<itemgap>0</itemgap>
					<onright>50</onright>
					<onleft>50</onleft>
					<onback>103</onback>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="image" id="4001">
						<width>100%</width>
						<height>61</height>
						<texture border="65,0,65,0" colordiffuse="context_color">dialogs/context/top.png</texture>
					</control>
					<control type="button" id="6">
						<include content="ContextButton"/>
						<label>$LOCALIZE[184]</label>
					</control>
					<control type="button" id="10">
						<include content="ContextButton"/>
						<label>$LOCALIZE[20413]</label>
					</control>
					<control type="image" id="4002">
						<width>100%</width>
						<height>61</height>
						<texture border="65,0,65,0" colordiffuse="context_color">dialogs/context/bottom.png</texture>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
