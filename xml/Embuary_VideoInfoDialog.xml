						<control type="label">
							<width>auto</width>
							<height>24</height>
							<label>$INFO[VideoPlayer.Starttime]$INFO[VideoPlayer.Endtime, - ]   </label>
							<font>reg22</font>
							<shadowcolor>text_shadow</shadowcolor>
