				<control type="label">
					<width>1200</width>
					<height>30</height>
					<wrapmultiline>true</wrapmultiline>
					<font>Reg20</font>
					<aligny>bottom</aligny>
					<textcolor>white</textcolor>
					<shadowcolor>text_shadow</shadowcolor>
