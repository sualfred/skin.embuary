<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3</defaultcontrol>
	<include>PropertyIncludes</include>
	<controls>
		<!-- Small select dialog -->
		<control type="group">
			<visible>Control.IsVisible(3)</visible>
			<!-- hidden container -->
			<control type="list" id="3">
				<top>-10</top>
				<left>-10</left>
				<width>1</width>
				<height>850</height>
				<pagecontrol>17</pagecontrol>
				<onup>noop</onup>
				<onleft>100</onleft>
				<onright>100</onright>
				<ondown>100</ondown>
				<scrolltime>0</scrolltime>
				<itemlayout height="50"/>
				<focusedlayout height="50"/>
			</control>
			<include content="DiffuseMask">
				<param name="visible">!VideoPlayer.IsFullscreen</param>
			</include>
			<!-- fake list with auto adjusted height -->
			<control type="group">
				<include>Dialog_PopupOpenClose</include>
				<centerleft>50%</centerleft>
				<width>450</width>
				<centertop>50%</centertop>
				<height>970</height>
				<control type="grouplist">
					<orientation>vertical</orientation>
					<height>auto</height>
					<align>center</align>
					<itemgap>0</itemgap>
					<onright>close</onright>
					<onleft>close</onleft>
					<usecontrolcoords>true</usecontrolcoords>
					<control type="image">
						<width>100%</width>
						<height>10</height>
						<texture border="5" colordiffuse="panel">common/menu_top.png</texture>
					</control>
					<include content="SmallSelectDialogItem">
						<param name="id" value="0"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="1"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="2"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="3"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="4"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="5"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="6"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="7"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="8"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="9"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="10"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="11"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="12"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="13"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="14"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="15"/>
					</include>
					<include content="SmallSelectDialogItem">
						<param name="id" value="16"/>
					</include>
					<control type="group">
						<width>100%</width>
						<height>60</height>
						<control type="image">
							<width>100%</width>
							<height>60</height>
							<texture border="10" colordiffuse="panel">common/menu_back.png</texture>
						</control>
						<control type="grouplist" id="100">
							<top>6</top>
							<width>100%</width>
							<height>50</height>
							<align>center</align>
							<onright>noop</onright>
							<onleft>noop</onleft>
							<ondown>noop</ondown>
							<orientation>horizontal</orientation>
							<itemgap>4</itemgap>
							<control type="button" id="101">
								<height>50</height>
								<include content="LightGreyButton">
									<param name="align-left" value="false"/>
								</include>
								<onup>SetFocus(3)</onup>
								<label>$INFO[Control.GetLabel(5)]</label>
								<onclick>SendClick(5)</onclick>
								<visible>Control.IsVisible(5)</visible>
							</control>
							<control type="button" id="102">
								<height>50</height>
								<include content="LightGreyButton">
									<param name="align-left" value="false"/>
								</include>
								<label>$LOCALIZE[222]</label>
								<onclick>SendClick(7)</onclick>
								<onup>SetFocus(3)</onup>
							</control>
						</control>
					</control>
					<control type="image">
						<width>100%</width>
						<height>10</height>
						<texture border="5" colordiffuse="panel">common/menu_bottom.png</texture>
					</control>
				</control>
			</control>
		</control>
		<!-- Big select dialog -->
		<control type="group">
			<visible>Control.IsVisible(6)</visible>
			<control type="image">
				<include>Visible_Fade</include>
				<include>FullscreenDimensions</include>
				<texture colordiffuse="background">common/white.jpg</texture>
			</control>
			<control type="grouplist">
				<include>Dialog_PopupOpenClose</include>
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>800</width>
				<height max="940">auto</height>
				<orientation>vertical</orientation>
				<itemgap>20</itemgap>
				<align>center</align>
				<!-- edit -->
				<control type="group">
					<height>50</height>
					<control type="label" id="1">
						<width>100%</width>
						<height>48</height>
						<font>Reg24</font>
						<aligny>center</aligny>
						<textoffsetx>5</textoffsetx>
						<textcolor>text_white</textcolor>
					</control>
					<control type="image">
						<width>100%</width>
						<top>45</top>
						<height>2</height>
						<texture colordiffuse="lightgrey">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="image">
						<width>100%</width>
						<top>45</top>
						<height>2</height>
						<texture colordiffuse="emby">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
						<include>WindowOpen_GreenBar</include>
					</control>
				</control>
				<!-- list -->
				<control type="group">
					<height>470</height>
					<control type="image">
						<height>470</height>
						<texture colordiffuse="thumb_background">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="list" id="6">
						<centerleft>50%</centerleft>
						<top>10</top>
						<height>450</height>
						<onup>noop</onup>
						<onleft>200</onleft>
						<onright>200</onright>
						<ondown>200</ondown>
						<pagecontrol>60</pagecontrol>
						<scrolltime>200</scrolltime>
						<itemlayout height="75" width="800">
							<control type="image">
								<height>75</height>
								<width>75</width>
								<left>10</left>
								<bordersize>5</bordersize>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<aspectratio>keep</aspectratio>
							</control>
							<control type="label">
								<right>20</right>
								<left>100</left>
								<height>75</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, [,]]</label>
							</control>
						</itemlayout>
						<focusedlayout height="75" width="800">
							<control type="image">
								<width>100%</width>
								<height>75</height>
								<texture colordiffuse="list_hover">common/white.jpg</texture>
								<visible>Control.HasFocus(6)</visible>
							</control>
							<control type="image">
								<height>75</height>
								<width>75</width>
								<left>10</left>
								<bordersize>5</bordersize>
								<texture background="true">$INFO[ListItem.Icon]</texture>
								<aspectratio>keep</aspectratio>
							</control>
							<control type="label">
								<right>20</right>
								<left>100</left>
								<height>75</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, [,]]</label>
							</control>
						</focusedlayout>
					</control>
					<control type="scrollbar" id="60">
						<right>0</right>
						<top>0</top>
						<bottom>0</bottom>
						<width>4</width>
						<orientation>vertical</orientation>
						<showonepage>false</showonepage>
						<texturesliderbackground colordiffuse="00ffffff">common/white.jpg</texturesliderbackground>
						<texturesliderbar colordiffuse="softgrey">common/white.jpg</texturesliderbar>
					</control>
				</control>
				<!-- Button -->
				<control type="grouplist" id="200">
					<height>50</height>
					<width>100%</width>
					<orientation>horizontal</orientation>
					<itemgap>5</itemgap>
					<align>center</align>
					<onright>noop</onright>
					<onleft>noop</onleft>
					<control type="button" id="5">
						<include>DarkGreyButton</include>
						<onup>SetFocus(6)</onup>
						<visible>!String.IsEmpty(Control.GetLabel(5))</visible>
					</control>
					<control type="button" id="7">
						<include>DarkGreyButton</include>
						<label>$LOCALIZE[222]</label>
						<onup>SetFocus(6)</onup>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
