<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">4012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
	<include>PropertyIncludes</include>
	<controls>
		<control type="progress" id="4014">
			<include>HiddenObject</include>
		</control>
		<control type="group">
			<animation effect="fade" start="0" end="100" time="0">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="400">WindowClose</animation>
			<bottom>0</bottom>
			<height>181</height>
			<!-- Background -->
			<control type="image">
				<width>100%</width>
				<height>181</height>
				<texture colordiffuse="black">views/player/mask_bottom.png</texture>
			</control>
			<!-- Thumb -->
			<control type="group">
				<top>20</top>
				<left>29</left>
				<control type="image">
					<top>-2</top>
					<left>-2</left>
					<width>256</width>
					<height>147</height>
					<texture border="20,20,20,20">items/shadow.png</texture>
				</control>
				<control type="group">
					<visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape))</visible>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture colordiffuse="$VAR[ThumbFallbackColor]">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="textbox">
						<top>10</top>
						<left>10</left>
						<width>230</width>
						<height>121</height>
						<font>Light24</font>
						<textcolor>white</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[Window.Property(tvshowtitle)]</label>
					</control>
				</control>
				<control type="group">
					<visible>!String.IsEmpty(Window.Property(thumb)) | !String.IsEmpty(Window.Property(landscape))</visible>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture colordiffuse="thumb_background_player">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>$VAR[UpNextThumb]</texture>
						<aspectratio>scale</aspectratio>
					</control>
				</control>
			</control>
			<!-- Labels -->
			<control type="group">
				<top>20</top>
				<left>299</left>
				<right>20</right>
				<!-- Time -->
				<control type="label">
					<width>auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>med28</font>
					<textcolor>white</textcolor>
					<label>[LIGHT]$LOCALIZE[31130]  -  $LOCALIZE[31012]   [COLOR $VAR[AccentColor]]$VAR[PlayerTimeRemaining][/COLOR][/LIGHT]</label>
				</control>
				<!-- Details -->
				<control type="grouplist">
					<orientation>horizontal</orientation>
					<height>30</height>
					<top>40</top>
					<itemgap>0</itemgap>
					<control type="label">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<font>reg24</font>
						<textcolor>white</textcolor>
						<label>$INFO[Window.Property(tvshowtitle),, - ]$INFO[Window.Property(season),S,:]$INFO[Window.Property(episode),E, - ]$INFO[Window.Property(title)]   </label>
						<visible>!String.IsEmpty(Window.Property(title))</visible>
					</control>
					<control type="label">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<font>reg24</font>
						<textcolor>white</textcolor>
						<label>$INFO[Window.Property(year),,   ]</label>
						<visible>!String.IsEmpty(Window.Property(year))</visible>
					</control>
					<control type="label">
						<animation effect="slide" end="-2,1" time="0" condition="true">Conditional</animation>
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<label>î ¸</label>
						<font>Material26</font>
						<textcolor>red</textcolor>
						<visible>!String.IsEmpty(Window.Property(rating))</visible>
					</control>
					<control type="label">
						<width>auto</width>
						<height>30</height>
						<aligny>center</aligny>
						<label>$INFO[Window.Property(rating),,   ]</label>
						<font>reg24</font>
						<textcolor>white</textcolor>
						<visible>!String.IsEmpty(Window.Property(rating))</visible>
					</control>
				</control>
				<!-- Buttons -->
				<control type="grouplist">
					<orientation>horizontal</orientation>
					<height>56</height>
					<bottom>20</bottom>
					<itemgap>5</itemgap>
					<control type="button" id="4012">
						<include>LightGreyButton</include>
						<label>$LOCALIZE[31080]</label>
					</control>
					<control type="button" id="4013">
						<include>LightGreyButton</include>
						<label>$LOCALIZE[15067]</label>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>