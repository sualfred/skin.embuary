<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<include>PropertyIncludes</include>
	<controls>
		<control type="label" id="101">
			<include>HiddenObject</include>
		</control>
		<include>Background</include>
		<control type="group">
			<include>Window_OpenClose</include>
			<top>58</top>
			<!-- left col -->
			<control type="grouplist">
				<left>135</left>
				<centertop>50%</centertop>
				<width>800</width>
				<height max="940">auto</height>
				<orientation>vertical</orientation>
				<itemgap>20</itemgap>
				<align>center</align>
				<!-- heading -->
				<control type="group">
					<height>50</height>
					<control type="label">
						<width>100%</width>
						<height>48</height>
						<font>Reg24</font>
						<aligny>center</aligny>
						<textoffsetx>5</textoffsetx>
						<label>$LOCALIZE[744]</label>
					</control>
					<control type="image">
						<width>100%</width>
						<top>45</top>
						<height>2</height>
						<texture colordiffuse="lightgrey">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="image">
						<width>100%</width>
						<top>45</top>
						<height>2</height>
						<texture colordiffuse="emby">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
						<include>WindowOpen_GreenBar</include>
					</control>
				</control>
				<!-- list -->
				<control type="group">
					<height>520</height>
					<control type="image">
						<height>520</height>
						<texture colordiffuse="thumb_background">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="list" id="50">
						<centerleft>50%</centerleft>
						<top>10</top>
						<height>500</height>
						<onup>6666</onup>
						<onleft>900</onleft>
						<onright>100</onright>
						<ondown>200</ondown>
						<pagecontrol>70</pagecontrol>
						<scrolltime>200</scrolltime>
						<itemlayout height="50" width="800">
							<control type="image">
								<height>50</height>
								<width>50</width>
								<left>5</left>
								<bordersize>5</bordersize>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="label">
								<right>20</right>
								<left>60</left>
								<height>50</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<label>$INFO[ListItem.Label]$INFO[ListItem.Label2,[COLOR softgrey] [,][/COLOR]]</label>
							</control>
						</itemlayout>
						<focusedlayout height="50" width="800">
							<control type="image">
								<width>100%</width>
								<height>50</height>
								<texture colordiffuse="list_hover">common/white.jpg</texture>
								<visible>Control.HasFocus(50)</visible>
							</control>
							<control type="image">
								<height>50</height>
								<width>50</width>
								<left>5</left>
								<bordersize>5</bordersize>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="label">
								<right>20</right>
								<left>60</left>
								<height>50</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<label>$INFO[ListItem.Label]$INFO[ListItem.Label2,[COLOR softgrey] [,][/COLOR]]</label>
							</control>
						</focusedlayout>
					</control>
					<control type="scrollbar" id="70">
						<right>0</right>
						<top>0</top>
						<bottom>0</bottom>
						<width>4</width>
						<orientation>vertical</orientation>
						<showonepage>false</showonepage>
						<texturesliderbackground colordiffuse="00ffffff">common/white.jpg</texturesliderbackground>
						<texturesliderbar colordiffuse="softgrey">common/white.jpg</texturesliderbar>
					</control>
				</control>
				<!-- Button -->
				<control type="grouplist" id="200">
					<bottom>0</bottom>
					<height>100</height>
					<width>100%</width>
					<orientation>horizontal</orientation>
					<itemgap>5</itemgap>
					<align>center</align>
					<onright>100</onright>
					<onleft>900</onleft>
					<control type="button" id="6">
						<label>$LOCALIZE[31067]</label>
						<onup>SetFocus(50)</onup>
					</control>
					<control type="button" id="7">
						<label>$LOCALIZE[190]</label>
						<onup>SetFocus(50)</onup>
					</control>
					<control type="button" id="8">
						<label>$LOCALIZE[192]</label>
						<onup>SetFocus(50)</onup>
					</control>
				</control>
			</control>
			<!-- right col -->
			<control type="grouplist">
				<right>135</right>
				<centertop>50%</centertop>
				<width>800</width>
				<height max="940">auto</height>
				<orientation>vertical</orientation>
				<itemgap>20</itemgap>
				<align>center</align>
				<!-- heading -->
				<control type="group">
					<height>50</height>
					<control type="label">
						<width>100%</width>
						<height>48</height>
						<font>Reg24</font>
						<aligny>center</aligny>
						<textoffsetx>5</textoffsetx>
						<label>$LOCALIZE[13350]</label>
					</control>
					<control type="image">
						<width>100%</width>
						<top>45</top>
						<height>2</height>
						<texture colordiffuse="lightgrey">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="image">
						<width>100%</width>
						<top>45</top>
						<height>2</height>
						<texture colordiffuse="emby">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
						<include>WindowOpen_GreenBar</include>
					</control>
				</control>
				<!-- list -->
				<control type="group">
					<height>520</height>
					<control type="image">
						<height>520</height>
						<texture colordiffuse="thumb_background">common/white.jpg</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="list" id="100">
						<centerleft>50%</centerleft>
						<top>10</top>
						<height>500</height>
						<onup>6666</onup>
						<onleft>50</onleft>
						<onright>noop</onright>
						<ondown>200</ondown>
						<pagecontrol>60</pagecontrol>
						<scrolltime>200</scrolltime>
						<itemlayout height="50" width="800">
							<control type="label">
								<right>20</right>
								<left>20</left>
								<height>50</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<label>$INFO[ListItem.Label]</label>
							</control>
						</itemlayout>
						<focusedlayout height="50" width="800">
							<control type="image">
								<width>100%</width>
								<height>50</height>
								<texture colordiffuse="list_hover">common/white.jpg</texture>
								<visible>Control.HasFocus(100)</visible>
							</control>
							<control type="label">
								<right>20</right>
								<left>20</left>
								<height>50</height>
								<aligny>center</aligny>
								<font>Reg24</font>
								<label>$INFO[ListItem.Label]</label>
							</control>
						</focusedlayout>
					</control>
					<control type="scrollbar" id="60">
						<right>0</right>
						<top>0</top>
						<bottom>0</bottom>
						<width>4</width>
						<orientation>vertical</orientation>
						<showonepage>false</showonepage>
						<texturesliderbackground colordiffuse="00ffffff">common/white.jpg</texturesliderbackground>
						<texturesliderbar colordiffuse="softgrey">common/white.jpg</texturesliderbar>
					</control>
				</control>
				<control type="textbox">
					<right>0</right>
					<left>0</left>
					<height>100</height>
					<font>reg22</font>
					<align>center</align>
					<label>$INFO[Control.GetLabel(101),$LOCALIZE[31068]: ]</label>
				</control>
			</control>
		</control>

		<!-- header bar -->
		<include content="HeaderBar">
			<param name="id">50</param>
			<param name="auto_hide">false</param>
		</include>
		<!-- side panel -->
		<include content="SidePanel">
			<param name="onright">50</param>
		</include>
	</controls>
</window>
