<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">100</defaultcontrol>
	<include>PropertyIncludes</include>
	<controls>
		<control type="scrollbar" id="3000">
			<include>HiddenObject</include>
		</control>
		<control type="image">
			<include>Visible_Fade</include>
			<include>FullscreenDimensions</include>
			<texture colordiffuse="background_diffuse">common/white.jpg</texture>
		</control>
		<control type="grouplist">
			<include>Dialog_PopupOpenClose</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>800</width>
			<height max="940">auto</height>
			<orientation>vertical</orientation>
			<itemgap>20</itemgap>
			<align>center</align>
			<!-- headline -->
			<control id="1" type="label">
				<centerleft>50%</centerleft>
				<width>100%</width>
				<height>26</height>
				<font>Med28</font>
				<autoscroll>false</autoscroll>
				<align>center</align>
				<aligny>top</aligny>
			</control>
			<!-- message -->
			<control id="9" type="textbox">
				<centerleft>50%</centerleft>
				<width>100%</width>
				<height max="745">auto</height>
				<font>PopUpText</font>
				<autoscroll>false</autoscroll>
				<align>center</align>
				<aligny>top</aligny>
				<pagecontrol>3000</pagecontrol>
			</control>
			<!-- progress -->
			<control type="progress" id="20">
				<width>100%</width>
				<height>20</height>
				<texturebg colordiffuse="black" border="2">common/white.jpg</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture colordiffuse="emby"  border="2">common/white.jpg</midtexture>
				<righttexture>-</righttexture>
			</control>
			<!-- Button -->
			<control type="grouplist" id="100">
				<height>50</height>
				<width>100%</width>
				<orientation>horizontal</orientation>
				<itemgap>5</itemgap>
				<align>center</align>
				<onright>noop</onright>
				<onleft>noop</onleft>
				<control type="button" id="11">
					<include>DarkGreyButton</include>
					<label>$LOCALIZE[15067]</label>
					<onup>PageUp(3000)</onup>
					<ondown>PageDown(3000)</ondown>
				</control>
				<control type="button" id="10">
					<include>DarkGreyButton</include>
					<label>$LOCALIZE[15067]</label>
					<onup>PageUp(3000)</onup>
					<ondown>PageDown(3000)</ondown>
				</control>
				<control type="button" id="12">
					<include>DarkGreyButton</include>
					<label>$LOCALIZE[15067]</label>
					<onup>PageUp(3000)</onup>
					<ondown>PageDown(3000)</ondown>
				</control>
			</control>
		</control>
	</controls>
</window>
